<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bate-Papo</title>
    <link rel="shortcut icon" href="/img/bate-papo.ico">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
        integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <style>
        img {
            width: 150px;
            margin-bottom: 20px;
        }

        #chat {
            border: 1px solid rgb(185, 180, 180);
            background-color: aliceblue;
            padding: 5px;
            max-height: 250px;
            min-height: 250px;
            overflow-y: scroll;
        }
    </style>

</head>

<body>
    <div align="center">
        <img class="mt-3" src="/img/bate-papo.png">
    </div>
    <div class="container w-50">
        <div id="chat">
            <!-- CHAT -->
        </div>
        <br>
        <input class="form-control mb-1" type="text" id="username" placeholder="Nome de usuÃ¡rio">
        <input class="form-control mb-3" type="text" id="msg" placeholder="Mensagem">
        <button class="btn btn-primary btn-lg btn-block" onclick="enviar()">Enviar</button>
    </div>
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.js"></script>
<script>
    const socket = io('http://localhost:3000');
    socket.on('disconnect', () => {
        console.log('Desconectado!');
    });

    socket.on('showmsg', (data) => {
        let chat = document.getElementById("chat");
        let p = document.createElement("p");
        p.innerHTML = '<b>' + data.username + '</b>' + ': ' + data.msg;
        chat.append(p);
        chat.scrollTop = chat.scrollHeight;
    });

    function enviar() {
        let msgField = document.getElementById("msg");
        let usernameField = document.getElementById("username");

        let msg = msgField.value;
        let username = usernameField.value;

        socket.emit('msg', { msg: msg, username: username });
    }

</script>

</html>